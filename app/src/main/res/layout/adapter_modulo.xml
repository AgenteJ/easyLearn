<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_nomeModulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do mÃ³dulo"
            android:fontFamily="@font/sfprodisplay_bold"
            android:src="@color/colorTitulo"
            android:textStyle="bold"
            android:textColor="@color/colorTitulo"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txt_qtdAulas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/sfprodisplay_medium"
            android:src="@color/colorSubtitulo"
            android:text="0 aulas "
            android:textColor="@color/colorDescricao"
            android:textSize="14sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic__arrow_right_laranja_24dp"
        android:scaleType="center"
        android:layout_weight="1"/>

</LinearLayout>