<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DisciplinasFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayoutPesquisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Buscar"
                android:fontFamily="@font/sfprodisplay_bold"
                android:textSize="26sp"
                android:textColor="@color/colorTitulo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <android.support.v7.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/colorDiv"
                    android:elevation="0dp"
                    app:cardCornerRadius="6dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:elevation="0dp"
                        app:srcCompat="@drawable/ic_adjusts"
                        android:tint="@color/colorBold"/>

                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/textPesquisa"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorDescricao"
                    android:ems="10"
                    android:hint="Pesquisar disciplinas..."
                    android:background="@color/colorEditText"/>

                <android.support.v7.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:elevation="0dp"
                    app:cardCornerRadius="6dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:elevation="0dp"
                        app:srcCompat="@drawable/ic_search_black_24dp"
                        android:tint="@color/white"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Disciplinas"
                android:fontFamily="@font/sfprodisplay_bold"
                android:textSize="26sp"
                android:textColor="@color/colorTitulo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <ListView
                    android:id="@+id/listDisciplinas"
                    android:layout_width="match_parent"
                    android:layout_height="500dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>