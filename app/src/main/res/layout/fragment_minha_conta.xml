<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.MinhaContaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/bottomHeader"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="178dp" />

            <android.support.constraint.Guideline
                android:id="@+id/bottomIcon"
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="188dp" />

            <android.support.constraint.Guideline
                android:id="@+id/middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="205dp" />

            <ImageView
                android:id="@+id/imageHeader"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@color/colorCinza"
                android:contentDescription="TODO"
                android:tint="@color/colorCinza"
                app:layout_constraintBottom_toTopOf="@+id/imageProfile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_gear" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_default_avatar"
                app:civ_border_color="@color/white"
                app:civ_border_width="5dp"
                app:layout_constraintBottom_toTopOf="@id/bottomIcon"
                app:layout_constraintEnd_toStartOf="@id/middle"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/buttonPreferencias"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_primary_outline"
                android:fontFamily="@font/sfprodisplay_bold"
                android:stateListAnimator="@null"
                android:text="Personalizar"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageHeader"
                app:layout_constraintVertical_bias="0.35000002" />

            <ImageView
                android:id="@+id/imageSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/buttonPreferencias"
                app:layout_constraintEnd_toStartOf="@+id/buttonPreferencias"
                app:layout_constraintTop_toTopOf="@+id/buttonPreferencias"
                app:srcCompat="@drawable/ic_gear" />

        </android.support.constraint.ConstraintLayout>


        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Canal"
                android:fontFamily="@font/sfprodisplay_bold"
                android:textSize="26sp"
                android:textColor="@color/colorTitulo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCursosDisponibilizados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfprodisplay_bold"
                    android:text="0"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cursos disponibilizados"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/textCursosSubscritos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfprodisplay_bold"
                    android:text="0"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:text=" cursos disponibilizados"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/sfprodisplay_bold"
                    android:text="Cursos Disponibilizados"
                    android:textColor="@color/colorTitulo"
                    android:textSize="26sp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewCursosDisponibilizados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>